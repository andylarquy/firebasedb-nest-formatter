{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "moduleResolution": "classic",
      "esModuleInterop": true,
      "baseUrl": "./src",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true
    },
    "exclude": [
      "node_modules"
    ]
  }