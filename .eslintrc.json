{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "env":{
      "browser": true
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "semi":  ["error", "never"],
      "eol-last": ["warn", "always"],
      "quotes": ["warn", "single"]
    }
  }